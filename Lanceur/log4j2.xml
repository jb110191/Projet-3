<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="ERROR">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>
		
		<File name="MyFile" fileName="all.log" immediateFlush="false" append="false">
			<PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n%n"/>
		</File>
	</Appenders>

	<Loggers>
		<Root level="error">
			<AppenderRef ref="Console" />
			<AppenderRef ref="MyFile"/>
		</Root>
  	
  		<logger name="trace" level="TRACE" additivity="false">
  			<AppenderRef ref="Console"/>
  			<AppenderRef ref="MyFile"/>
  		</logger>
  		
  		<logger name="debug" level="debug" additivity="false">
  			<AppenderRef ref="MyFile"/>
  		</logger>

  		<logger name="fatal" level="Fatal" additivity="false">
  			<AppenderRef ref="Console"/>
  			<AppenderRef ref="MyFile"/>
  		</logger>

  		<logger name="Fichier-trace" level="trace" additivity="false">
  			<AppenderRef ref="MyFile"/>			
  		</logger>
  		
	</Loggers>
</Configuration>